#!/bin/sh -x

# bin/compile BUILD_DIR CACHE_DIR ENV_DIR

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

if [ ! -e $CACHE_DIR ]; then
    mkdir -p $CACHE_DIR
fi

# create dir to put all our stuff

if [ ! -e $BUILD_DIR/js-1.8.5 ]; then
    # get spidermonkey
    wget -O $BUILD_DIR/js.tar.gz http://ftp.mozilla.org/pub/mozilla.org/js/js185-1.0.0.tar.gz 
    tar -xzf $BUILD_DIR/js.tar.gz -C $BUILD_DIR
    rm -f $BUILD_DIR/js.tar.gz
fi

if [ ! -e otp_src_17.1 ]; then
    # get erlang
    wget -O $BUILD_DIR/otp_src_17.1.tar.gz http://www.erlang.org/download/otp_src_17.1.tar.gz
    tar -xzf $BUILD_DIR/otp_src_17.1.tar.gz -C $BUILD_DIR
    rm -f $BUILD_DIR/otp_src_17.1.tar.gz
fi

if [ ! -e apache-couchdb-1.6.0 ]; then
    # get couchdb
    wget -O $BUILD_DIR/ http://ftp.carnet.hr/misc/apache/couchdb/source/1.6.0/apache-couchdb-1.6.0.tar.gz
    tar -xzf $BUILD_DIR/apache-couchdb-1.6.0.tar.gz -C $BUILD_DIR
    rm -f $BUILD_DIR/apache-couchdb-1.6.0.tar.gz
fi

if [ ! -e icu ]; then
    # get ICU
    wget -O $BUILD_DIR/icu4c-4_8_1_1-src.tgz http://download.icu-project.org/files/icu4c/4.8.1.1/icu4c-4_8_1_1-src.tgz
    tar -xzf $BUILD_DIR/icu4c-4_8_1_1-src.tgz -C $CACHE_DIR
    rm -f $CACHE_DIR/icu4c-4_8_1_1-src.tgz
fi


# build and install ICU
cd $CACHE_DIR/icu/source
./configure --prefix=$CACHE_DIR/usr/
make

# build and install spidermonkey
cd $CACHE_DIR/js-1.8.5/js/src
./configure --prefix=$CACHE_DIR/usr/
make
# some step ahead chokes if this file exists
# rm js

# build and install erlang
cd $CACHE_DIR/otp_src_17.1
./configure --prefix=$CACHE_DIR/usr/
make

# build couchdb
cd $BASEPATH/apache-couchdb-1.6.0
export PATH=$PATH:$CACHE_DIR/usr/bin/:$CACHE_DIR/usr/local/bin
export ICU_CONFIG="$CACHE_DIR/usr/bin/icu-config --detect-prefix"
export ICU_CPPFLAGS="-I$CACHE_DIR/usr/include/"
./configure --prefix=$CACHE_DIR --with-js-lib=$CACHE_DIR/usr/lib/ --with-js-include=$CACHE_DIR/usr/include/js/ --with-erlang=$CACHE_DIR/usr/lib/erlang/usr/include/
make
